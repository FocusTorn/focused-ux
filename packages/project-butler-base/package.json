{
    "name": "project-butler-base",
    "displayName": "F-UX: Project Butler (Base)",
    "description": "A collection of project management and workflow utilities for VS Code (base version).",
    "publisher": "NewRealityDesigns",
    "repository": "https://github.com/FocusTorn/focused-ux",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "main": "./dist/extension.js",
    "engines": {
        "vscode": "^1.101.0"
    },
    "activationEvents": [
        "onCommand:fux-project-butler-base.updateTerminalPath",
        "onCommand:fux-project-butler-base.createBackup",
        "onCommand:fux-project-butler-base.enterPoetryShell",
        "onCommand:fux-project-butler-base.formatPackageJson",
        "onCommand:fux-project-butler-base.hotswap"
    ],
    "contributes": {
        "commands": [
            {
                "command": "fux-project-butler-base.updateTerminalPath",
                "title": "Project Butler (Base): CD to Here in Terminal",
                "category": "Focused-UX"
            },
            {
                "command": "fux-project-butler-base.createBackup",
                "title": "Project Butler (Base): Create Backup of File",
                "category": "Focused-UX"
            },
            {
                "command": "fux-project-butler-base.enterPoetryShell",
                "title": "Project Butler (Base): Open Poetry Shell",
                "category": "Focused-UX"
            },
            {
                "command": "fux-project-butler-base.formatPackageJson",
                "title": "Project Butler (Base): Format package.json",
                "category": "Focused-UX"
            },
            {
                "command": "fux-project-butler-base.hotswap",
                "title": "Project Butler (Base): Hotswap VSIX",
                "category": "Focused-UX"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "fux-project-butler-base.updateTerminalPath",
                    "group": "fux-terminal"
                },
                {
                    "command": "fux-project-butler-base.enterPoetryShell",
                    "group": "fux-terminal"
                },
                {
                    "when": "resourceExtname != .vsix",
                    "command": "fux-project-butler-base.createBackup",
                    "group": "fux-file"
                },
                {
                    "when": "resourceFilename == package.json",
                    "command": "fux-project-butler-base.formatPackageJson",
                    "group": "fux-format"
                },
                {
                    "when": "resourceExtname == .vsix",
                    "command": "fux-project-butler-base.hotswap",
                    "group": "fux-package"
                }
            ]
        }
    },
    "devDependencies": {
        "@types/node": "^24.0.10",
        "@types/vscode": "^1.101.0",
        "typescript": "^5.8.3"
    }
}
