{
    "name": "@fux/note-hub-ext",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/note-hub/ext/src",
    "projectType": "application",
    "targets": {
        "build": {
            "dependsOn": ["@fux/note-hub-core:build", "@fux/shared:build"],
            "executor": "@nx/esbuild:esbuild",
            "outputs": ["{options.outputPath}"],
            "options": {
                "main": "packages/note-hub/ext/src/extension.ts",
                "outputPath": "packages/note-hub/ext/dist",
                "tsConfig": "packages/note-hub/ext/tsconfig.json",
                "platform": "node",
                "format": ["cjs"],
                "bundle": true,
                "external": ["vscode", "awilix"],
                "outExtension": {
                    ".js": ".cjs"
                },
                "sourcemap": false,
                "declaration": false,
                "target": "es2022",
                "keepNames": true,
                "treeShaking": true,
                "metafile": true,
                "deleteOutputPath": true
            }
        },
        "package:dev": {
            "executor": "nx:run-commands",
            "dependsOn": ["build"],
            "options": {
                "command": "node ./_scripts/create-dev-vsix.js note-hub/ext"
            }
        },
        "package": {
            "executor": "nx:run-commands",
            "dependsOn": ["build"],
            "outputs": ["{workspaceRoot}/vsix_packages/note-hub.vsix"],
            "options": {
                "command": "vsce package --no-dependencies -o ../../vsix_packages/note-hub.vsix",
                "cwd": "{projectRoot}"
            }
        },
        "publish": {
            "executor": "nx:run-commands",
            "dependsOn": ["package"],
            "options": {
                "command": "vsce publish",
                "cwd": "{projectRoot}"
            }
        },
        "lint": {},
        "clean:dist": { "extends": "clean:dist" },
        "clean:cache": { "extends": "clean:cache" }
    },
    "tags": ["type:extension"]
}
