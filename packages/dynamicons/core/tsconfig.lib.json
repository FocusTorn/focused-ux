{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": false,
        "composite": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "**/*.test.ts",
        "**/*.spec.ts",
        "__tests__/**/*",
        "src/models/**/*"
    ]
}
