{
    "extends": "../../../tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "dist",
        "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
        "emitDeclarationOnly": true,
        "declaration": true,
        "declarationMap": true,
        "composite": true,
        "types": ["node"]
    },
    "include": [
        "src/**/*.ts",
        "src/_interfaces/**/*.ts",
        "src/_config/**/*.ts",
        "src/services/**/*.ts"
    ],
    "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts", "src/scripts/**/*.ts"],
    "references": [{ "path": "../../../libs/shared/tsconfig.lib.json" }]
}
