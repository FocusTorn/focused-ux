{
    "name": "@fux/dynamicons-ext",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/dynamicons/ext/src",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "@nx/esbuild:esbuild",
            "outputs": ["{options.outputPath}"],
            "dependsOn": ["^build"],
            "options": {
                "entryPoints": ["packages/dynamicons/ext/src/extension.ts"],
                "outputPath": "packages/dynamicons/ext/dist",
                "format": ["cjs"],
                
                "metafile": true,
                
                "platform": "node",
                "bundle": true,
                "external": ["vscode", "awilix"],
                "sourcemap": true,
                "main": "packages/dynamicons/ext/src/extension.ts",
                "tsConfig": "packages/dynamicons/ext/tsconfig.json",
                "assets": [
                    {
                        "glob": "**/*",
                        "input": "packages/dynamicons/ext/assets/",
                        "output": "./assets/"
                    }
                ]
            }
        },
        "package": {
            "executor": "nx:run-commands",
            "dependsOn": ["build"],
            "options": {
                "command": "node _scripts/create-vsix.js packages/dynamicons/ext"
            }
        },
        "package:dev": {
            "executor": "nx:run-commands",
            "dependsOn": ["build"],
            "options": {
                "command": "node _scripts/create-vsix.js packages/dynamicons/ext --dev"
            }
        },
        "publish": {
            "executor": "nx:run-commands",
            "dependsOn": ["package"],
            "options": {
                "command": "vsce publish",
                "cwd": "{projectRoot}"
            }
        },
        "clean:dist": { "extends": "clean:dist" },
        "clean:cache": { "extends": "clean:cache" }
    },
    "tags": ["type:extension"]
}
