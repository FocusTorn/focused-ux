{
    "extends": "../../../tsconfig.base.json",
    
    "include": ["src/**/*.ts"],
    
    "references": [{ "path": "./tsconfig.lib.json" }],

    "compilerOptions": {
        "outDir": "./out-tsc",
        "rootDir": "./src",
