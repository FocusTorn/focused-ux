{
    "name": "@fux/project-butler-core",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/project-butler/core/src",
    "projectType": "library",
    "targets": {
        
        "build": { //>
            "executor": "@nx/esbuild:esbuild",
            "outputs": [
                "{options.outputPath}"
            ],
            "options": {
                "main": "packages/project-butler/core/src/index.ts",
                "outputPath": "packages/project-butler/core/dist",
                "tsConfig": "packages/project-butler/core/tsconfig.lib.json",
                "platform": "node",
                "format": [
                    "esm"
                ],
                "bundle": false,
                "sourcemap": true,
                "target": "es2022",
                "keepNames": true,
                "declarationRootDir": "packages/project-butler/core/src",
                "thirdParty": false,
                "deleteOutputPath": true,
                "external": [
                    "vscode",
                    "js-yaml"
                ]
            }
        }, //<
        
        "check-types": { "extends": "check-types" },
        
        "lint": { "extends": "lint" },
        "lint:full": { "extends": "lint:full" },
        
        "validate": { "extends": "validate" },
        "validate:full": { "extends": "validate:full" },
        
        "audit": { "extends": "audit" },
        "audit:full": { "extends": "audit:full" },
        
        "clean": { "extends": "clean" },
        "clean:dist": { "extends": "clean:dist" },
        "clean:cache": { "extends": "clean:cache" },
       
        
        // Orriginal
        // "test": { //>
        //     "executor": "@nx/vite:test",
        //     "outputs": ["{options.reportsDirectory}"],
        //     "dependsOn": ["build", "^build"]
        // }, //<
        // "test:full": { //>
        //     "executor": "@nx/vite:test",
        //     "outputs": ["{options.reportsDirectory}"],
        //     "dependsOn": [
        //         {
        //             "dependencies": true,
        //             "target": "test",
        //             "params": "forward"
        //         }
        //     ]
        // } //<
       
        
        
        // ┌──────────────────────────────────────────────────────────────────────────────────────────────┐
        // │           The below targets run test suites only on the package that contains them           │
        // └──────────────────────────────────────────────────────────────────────────────────────────────┘                
        "test": { // run just functional-tests //>
            "executor": "@nx/vite:test",
            "outputs": ["{options.reportsDirectory}"],
            "dependsOn": ["build", "^build"],
            "options": {
                
                // "configFile": "packages/project-butler/core/vitest.config.ts",
                "configFile": "{projectRoot}/vitest.config.ts",
                
                "passWithNoTests": true
            }
        }, //<
        "test:coverage-test": { // run {functional,coverage}-tests, with coverage report //>
            "executor": "@nx/vite:test",
            "outputs": ["{options.reportsDirectory}"],
            "dependsOn": ["build", "^build"],
            "options": {
                "configFile": "packages/project-butler/core/vitest.coverage.config.ts",
                "reportsDirectory": "packages/project-butler/core/__tests__/_reports/coverage",
                "passWithNoTests": true
            }
        }, //<
        
        // Only needed in an ext package
        "test:full": { // run {functional,integration}-tests  //>
            // Only needed in an ext package
        }, //<
        "test:full:coverage-tests": { // run {functional,coverage,integration}-tests , with coverage report //>
            // Only needed in an ext package        
        }, //<

        // ┌──────────────────────────────────────────────────────────────────────────────────────────────┐
        // │       These run test suites on the package that contain them and full dependency chain       │
        // └──────────────────────────────────────────────────────────────────────────────────────────────┘                
        "test:deps": { // run just functional-tests //>
            "executor": "@nx/vite:test",
            "outputs": ["{options.reportsDirectory}"],
            "dependsOn": [
                {
                    "dependencies": true,
                    "target": "test",
                    "params": "forward"
                }
            ],
            "options": {
                "configFile": "packages/project-butler/core/vitest.config.ts",
                "passWithNoTests": true
            }
        }, //<
        "test:deps:coverage-tests": { // run {functional,coverage}-tests, with coverage report //>
            "executor": "@nx/vite:test",
            "outputs": ["{options.reportsDirectory}"],
            "dependsOn": [
                {
                    "dependencies": true,
                    "target": "test:coverage-test",
                    "params": "forward"
                }
            ],
            "options": {
                "configFile": "packages/project-butler/core/vitest.coverage.config.ts",
                "reportsDirectory": "packages/project-butler/core/__tests__/_reports/coverage",
                "passWithNoTests": true
            }
        }, //<
        
        // Only needed in an ext package
        "test:deps:full": { // run {functional,integration}-tests  //>
            // Only needed in an ext package        
        }, //<
        "test:deps:full:coverage-tests": { // run {functional,coverage,integration}-tests , with coverage report //>
            // Only needed in an ext package        
        } //<

    },
    
    "tags": [ "core" ]
}


// {projectRoot}
