{
    "name": "@fux/project-butler-core",
    "tags": [ "core" ],
    "targets": {
        
        //= Finalize ============================================================ 
        "build": {
            "executor": "@nx/esbuild:esbuild",
            "outputs": [ "{options.outputPath}" ],
            "options": {
                "main": "packages/project-butler/core/src/index.ts",
                "outputPath": "packages/project-butler/core/dist",
                "declarationRootDir": "packages/project-butler/core/src",
                
                "format": [ "esm" ],
                "bundle": false,
                
                "external": [
                    "vscode",
                    "js-yaml"
                ]
            }
        },
        
        //= Quality ============================================================= 
        "check-types": { "extends": "check-types" },
        "check-types:deps": { "extends": "check-types:deps" },
        
        "lint": { "extends": "lint" },
        "lint:deps": { "extends": "lint:deps" },
        
        //= Cleaning ============================================================ 
        "clean": { "extends": "clean" },
        "clean:dist": { "extends": "clean:dist" },
        "clean:cache": { "extends": "clean:cache" },
        
        //= Single Package Testing ============================================== 
        "test": { "extends": "test" },
        "test:coverage-tests": { "extends": "test:coverage-tests" },
        
        //= Dependency Chain Testing ============================================ 
        "test:deps": { "extends": "test:deps" },
        "test:deps:coverage-tests": { "extends": "test:deps:coverage-tests" }
    
        // "validate": { "extends": "validate" },
        // "validate:deps": { "extends": "validate:deps" },
        // "audit": { "extends": "audit" },
        // "audit:full": { "extends": "audit:full" },
    },
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/project-butler/core/src",
    "projectType": "library"
}
