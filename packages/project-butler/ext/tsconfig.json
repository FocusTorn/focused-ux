{
    "extends": "../../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "**/*.test.ts",
        "**/*.spec.ts",
        "__tests__/**/*",
        "dist/**/*"
    ],
    "references": [
        {
            "path": "../core"
        }
    ]
}
