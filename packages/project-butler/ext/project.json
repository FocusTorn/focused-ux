{
    "name": "@fux/project-butler-ext",
    "tags": [ "ext" ],
    "implicitDependencies": ["@fux/project-butler-core"],
    "targets": {

        //= Finalize ============================================================ 
        "build": { //>
            "executor": "@nx/esbuild:esbuild",
            "outputs": [ "{options.outputPath}" ],
            "dependsOn": [{
                "projects": ["@fux/project-butler-core"],
                "target": "build",
                "params": "ignore"
            }],
            "options": {
                "main": "{projectRoot}/src/extension.ts",
                "outputPath": "{projectRoot}/dist",
                "tsConfig": "{projectRoot}/tsconfig.json",
                "declarationRootDir": "{projectRoot}/src",
                
                "format": ["cjs"],
                "bundle": true,
                "sourcemap": false,
                "declaration": false,
                "minify": true,
                "treeShaking": true,
                "metafile": true,
               
                "external": [
                    "vscode",
                    "js-yaml"
                ]
            }
        }, //<
        "build:dev": { //>
            "extends": "build:ext:dev",
            "dependsOn": [{
                "projects": ["@fux/project-butler-core"],
                "target": "build",
                "params": "ignore"
            }],
            "options": {
                "main": "{projectRoot}/src/extension.ts",
                "outputPath": "{projectRoot}/dist",
                "tsConfig": "{projectRoot}/tsconfig.json",
                "declarationRootDir": "{projectRoot}/src",
                
                "format": ["cjs"],
                "bundle": false,
                "sourcemap": true,
                "declaration": true,
                "minify": false,
                "treeShaking": false,
                "metafile": true,
               
                "external": [
                    "vscode",
                    "js-yaml"
                ]
            }
        }, //<
        
        "package": { "extends": "package" },
        "package:dev": { "extends": "package:dev" },
        
        "publish": { //>
            "executor": "nx:run-commands",
            "dependsOn": ["package"],
            "options": {
                "command": "vsce publish",
                "cwd": "{projectRoot}"
            }
        }, //<
        
        ///= Quality ============================================================= 
        "check-types": { "extends": "check-types" },
        "check-types:deps": { "extends": "check-types:deps" },
        
        "lint": { "extends": "lint" },
        "lint:deps": { "extends": "lint:deps" },
        
        "audit": { "extends": "audit" },
        "audit:code": { "extends": "audit:code" },
        "audit:test": { "extends": "audit:test" },
        "audit:all": { "extends": "audit:all" },
        
        //= Cleaning ============================================================ 
        "clean": { "extends": "clean" },
        "clean:dist": { "extends": "clean:dist" },
        "clean:cache": { "extends": "clean:cache" },
        
        //= Single Package Testing ============================================== 
        "test": { "extends": "test" },
        "test:coverage-tests": { "extends": "test:coverage-tests" },
        
        //= Dependency Chain Testing ============================================ 
        "test:deps": { "extends": "test:deps" },
        "test:deps:coverage-tests": { "extends": "test:deps:coverage-tests" },
         
        //= Integration Testing ================================================= 
        "test:integration": { "extends": "test:integration" }
        
    },
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/project-butler/ext/src",
    "projectType": "application"
}
