{
    "extends": "../../../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./_out-tsc",
        "rootDir": "./integration-tests",
        "module": "CommonJS",
        "moduleResolution": "node",
        "types": ["node", "mocha"],
        "composite": false,
        "declaration": false,
        "sourceMap": true,
        "tsBuildInfoFile": "./_out-tsc/tsconfig.test.tsbuildinfo"
    },
    "include": ["integration-tests/**/*.ts"]
}


