{
    "name": "project-butler",
    "displayName": "F-UX: Project Butler",
    "description": "A collection of project management and workflow utilities for VS Code.",
    "publisher": "NewRealityDesigns",
    "repository": "https://github.com/FocusTorn/focused-ux",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "main": "./dist/extension.js",
    "engines": {
        "vscode": "^1.101.0"
    },
    "activationEvents": [
        "onCommand:fux-project-butler.updateTerminalPath",
        "onCommand:fux-project-butler.enterPoetryShell",
        "onCommand:fux-project-butler.formatPackageJson",
        "onCommand:fux-project-butler.createBackup",
        "onCommand:fux-project-butler.hotswap"
    ],
    "contributes": {
        "commands": [
            {
                "command": "fux-project-butler.updateTerminalPath",
                "title": "Project Butler: CD to Here in Terminal",
                "category": "Focused-UX"
            },
            {
                "command": "fux-project-butler.enterPoetryShell",
                "title": "Project Butler: Open Poetry Shell",
                "category": "Focused-UX"
            },
            {
                "command": "fux-project-butler.formatPackageJson",
                "title": "Project Butler: Format package.json",
                "category": "Focused-UX"
            },
            {
                "command": "fux-project-butler.createBackup",
                "title": "Project Butler: Create Backup of File",
                "category": "Focused-UX"
            },
            {
                "command": "fux-project-butler.hotswap",
                "title": "Project Butler: Hotswap VSIX",
                "category": "Focused-UX"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "fux-project-butler.updateTerminalPath",
                    "group": "fux-terminal"
                },
                {
                    "command": "fux-project-butler.enterPoetryShell",
                    "group": "fux-terminal"
                },
                {
                    "when": "resourceFilename == package.json",
                    "command": "fux-project-butler.formatPackageJson",
                    "group": "fux-format"
                },
                {
                    "when": "resourceExtname != .vsix",
                    "command": "fux-project-butler.createBackup",
                    "group": "fux-file"
                },
                {
                    "when": "resourceExtname == .vsix",
                    "command": "fux-project-butler.hotswap",
                    "group": "fux-package"
                }
            ]
        }
    },
    "dependencies": {
        "@fux/project-butler-core": "workspace:*",
        "@fux/shared-services": "workspace:*",
        "awilix": "^12.0.5"
    },
    "devDependencies": {
        "@types/node": "^24.0.10",
        "@types/vscode": "^1.101.0",
        "typescript": "^5.8.3"
    }
}
