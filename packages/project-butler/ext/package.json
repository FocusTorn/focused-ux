{
    "name": "fux-project-butler",
    "displayName": "F-UX: Project Butler",
    "description": "A VSCode extension for project management utilities including package.json formatting, terminal management, backup creation, and Poetry shell integration.",
    "publisher": "NewRealityDesigns",
    "repository": "https://github.com/FocusTorn/focused-ux",
    "version": "0.1.0",
    "dependencies": {
        "@fux/project-butler-core": "workspace:*",
        "js-yaml": "^4.1.0"
    },
    "devDependencies": {
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^24.6.0",
        "@types/vscode": "^1.104.0",
        "@vscode/test-cli": "^0.0.11",
        "typescript": "^5.9.2",
        "vitest": "^3.2.4"
    },
    "contributes": {
        "commands": [
            {
                "command": "fux-project-butler.formatPackageJson",
                "title": "Project Butler: Format Package.json",
                "category": "Project Butler"
            },
            {
                "command": "fux-project-butler.updateTerminalPath",
                "title": "Project Butler: CD to Here",
                "category": "Project Butler"
            },
            {
                "command": "fux-project-butler.createBackup",
                "title": "Project Butler: Create Backup",
                "category": "Project Butler"
            },
            {
                "command": "fux-project-butler.enterPoetryShell",
                "title": "Project Butler: Enter Poetry Shell",
                "category": "Project Butler"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "submenu": "fux-project-butler.submenu",
                    "when": "true",
                    "group": "navigation"
                }
            ],
            "fux-project-butler.submenu": [
                {
                    "command": "fux-project-butler.formatPackageJson",
                    "when": "resourceExtname == .json && resourceFilename == package.json"
                },
                {
                    "command": "fux-project-butler.updateTerminalPath",
                    "when": "true"
                },
                {
                    "command": "fux-project-butler.createBackup",
                    "when": "true"
                },
                {
                    "command": "fux-project-butler.enterPoetryShell",
                    "when": "true"
                }
            ]
        },
        "submenus": [
            {
                "id": "fux-project-butler.submenu",
                "label": "Project Butler"
            }
        ]
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "engines": {
        "vscode": "^1.99.3"
    },
    "private": true,
    "main": "./dist/extension.cjs"
}
