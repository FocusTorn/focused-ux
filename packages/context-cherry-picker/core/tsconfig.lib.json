{
    "extends": "../../../tsconfig.base.json",
    "compilerOptions": {
        // "baseUrl": ".", // not used unless with browser AMD loaders
        "rootDir": "src",
        "outDir": "dist",
        "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
        "emitDeclarationOnly": true,
        "declaration": true,
        "declarationMap": true,
        "composite": true
        
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/**/*.spec.ts",
        "src/**/*.test.ts"
    ]
}
