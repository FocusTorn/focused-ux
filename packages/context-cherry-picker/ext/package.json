{
    "name": "context-cherry-picker",
    "displayName": "F-UX: Context Cherry Picker",
    "description": "Automates the transfer of code from an AI Agent into a VSCode file.",
    "publisher": "NewRealityDesigns",
    "repository": "https://github.com/FocusTorn/focused-ux",
    "version": "0.1.0",
    "private": true,
    "main": "./dist/index.cjs",
    "scripts": {
        "test": "nx vite:test",
        "test:run": "nx vite:test run",
        "test:coverage": "nx vite:test run --coverage",
        "test:ui": "nx vite:test --ui"
    },
    "engines": {
        "vscode": "^1.99.3"
    },
    "dependencies": {
        "@fux/context-cherry-picker-core": "workspace:*",
        "@fux/shared": "workspace:*",
        "awilix": "^12.0.5",
        "gpt-tokenizer": "^3.0.1",
        "js-yaml": "^4.1.0",
        "micromatch": "^4.0.8"
    },
    "devDependencies": {
        "@types/node": "^24.0.10",
        "@types/vscode": "^1.99.3",
        "typescript": "^5.8.3",
        "vitest": "^3.2.4",
        "@vitest/coverage-v8": "^3.2.4",
        "@fux/mockly": "workspace:*"
    },
    "activationEvents": [
        "onUri"
    ],
    "contributes": {
        "uriHandler": [
            {
                "id": "transfer",
                "label": "F-UX AI Agent Code Transfer"
            }
        ],
        "configuration": {
            "title": "F-UX: Context Cherry Picker",
            "properties": {
                "fux-context-cherry-picker.projectBase": {
                    "type": "string",
                    "default": "",
                    "description": "The absolute base path of the project to which relative file paths from the AI will be resolved."
                }
            }
        }
    }
}
