{
    "name": "@fux/context-cherry-picker-ext",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/context-cherry-picker/ext/src",
    "projectType": "library",
    "targets": {
        "build": {
            "dependsOn": ["@fux/context-cherry-picker-core:build", "@fux/shared:build"],
            "executor": "@nx/esbuild:esbuild",
            "outputs": ["{options.outputPath}"],
            "options": {
                "main": "packages/context-cherry-picker/ext/src/extension.ts",
                "outputPath": "packages/context-cherry-picker/ext/dist",
                "tsConfig": "packages/context-cherry-picker/ext/tsconfig.json",
                "platform": "node",
                "format": ["cjs"],
                "bundle": true,
                "external": ["vscode", "awilix", "gpt-tokenizer", "js-yaml", "micromatch"],
                "outExtension": { ".js": ".cjs" },
                "sourcemap": false,
                "metafile": true,
                "deleteOutputPath": true,
                "assets": []
            }
        },
        "copy-assets": {
            "executor": "nx:run-commands",
            "dependsOn": ["build"],
            "options": {
                "command": "node _scripts/copy-assets-silent.js packages/context-cherry-picker/ext/assets packages/context-cherry-picker/ext/dist/assets",
                "cwd": "{workspaceRoot}"
            }
        },
        "package:dev": {
            "executor": "nx:run-commands",
            "dependsOn": ["copy-assets"],
            "options": {
                "command": "node ./_scripts/create-dev-vsix.js context-cherry-picker/ext"
            }
        },
        "lint": {},
        "clean:dist": {
            "extends": "clean:dist"
        },
        "clean:cache": {
            "extends": "clean:cache"
        }
    },

    "tags": []
}
