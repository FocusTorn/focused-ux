{
    "$schema": "http://json-schema.org/draft-07/schema",
    "id": "NewExtension",
    "title": "New Extension Generator",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The kebab-case name of the new extension (e.g., 'note-hub').",
            "$default": {
                "$source": "argv",
                "index": 0
            },
            "x-prompt": "What is the name of the new extension?"
        }
    },
    "required": ["name"]
}
