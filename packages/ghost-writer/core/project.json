{
    "name": "@fux/ghost-writer-core",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/ghost-writer/core/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/esbuild:esbuild",
            "outputs": ["{options.outputPath}"],
            "options": {
                "main": "packages/ghost-writer/core/src/index.ts",
                "outputPath": "packages/ghost-writer/core/dist",
                "tsConfig": "packages/ghost-writer/core/tsconfig.lib.json",
                "platform": "node",
                "format": ["esm"],
                "bundle": false,
                "sourcemap": true,
                "target": "es2022",
                "keepNames": true,
                "declarationRootDir": "packages/ghost-writer/core/src",
                "thirdParty": false,
                "deleteOutputPath": true,

                "external": ["vscode", "typescript", "awilix", "js-yaml"]
            }
        },
        "verify:dist:hash": {
            "executor": "nx:run-commands",
            "options": {
                "command": "node ../../../scripts/verify-dist-hash.cjs",
                "cwd": "packages/ghost-writer/core"
            }
        },
        "build:with-verify": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "nx run @fux/ghost-writer-core:build",
                    "nx run @fux/ghost-writer-core:verify:dist:hash"
                ]
            }
        },
        "clean:dist": { "extends": "clean:dist" },
        "clean:cache": { "extends": "clean:cache" }
    },
    "tags": []
}
