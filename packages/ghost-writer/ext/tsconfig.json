{
    "extends": "../../../tsconfig.base.json",
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "lib": ["ES2022"],
        "declaration": false,
        
        
        "baseUrl": ".",
        "rootDir": "src",
        
        // "outDir": "./dist",
        "outDir": "./out-tsc/app",
        
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "declarationMap": false
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"],
    "references": [
        {
            "path": "../core"
        },
        {
            "path": "../../_shared/shared-services"
        }
    ]
}
