{
    "name": "@fux/ghost-writer-ext",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/ghost-writer/ext/src",
    "projectType": "library",

    "targets": {
        "build": {
            "dependsOn": ["@fux/ghost-writer-core:build", "@fux/shared:build"],
            "executor": "@nx/esbuild:esbuild",
            "outputs": ["{options.outputPath}"],
            "options": {
                "main": "packages/ghost-writer/ext/src/extension.ts",
                "outputPath": "packages/ghost-writer/ext/dist",
                "tsConfig": "packages/ghost-writer/ext/tsconfig.json",
                "platform": "node",
                "format": ["cjs"],
                "bundle": true,
                "external": ["vscode", "typescript", "awilix", "js-yaml"],
                "outExtension": { ".js": ".cjs" },
                "sourcemap": false,
                "metafile": true,
                "deleteOutputPath": true,
                "assets": [
                    {
                        "glob": "**/*",
                        "input": "packages/ghost-writer/ext/assets",
                        "output": "assets"
                    }
                ]
            }
        },
        "package": {
            "executor": "nx:run-commands",
            "dependsOn": ["build"],
            "outputs": ["{workspaceRoot}/vsix_packages/ghost-writer.vsix"],
            "options": {
                "command": "vsce package -o ../../vsix_packages/ghost-writer.vsix",
                "cwd": "packages/ghost-writer/ext"
            }
        },
        "package:dev": {
            "executor": "nx:run-commands",
            "options": {
                "command": "node ./_scripts/create-dev-vsix.js ghost-writer/ext"
            }
        },
        "lint": {},
        "clean:dist": {
            "extends": "clean:dist"
        },
        "clean:cache": {
            "extends": "clean:cache"
        }
    },

    "tags": []
}
