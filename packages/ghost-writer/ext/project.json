{
    "name": "@fux/ghost-writer-ext",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/ghost-writer/ext/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/esbuild:esbuild",
            "dependsOn": ["^build"],
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "packages/ghost-writer/ext/dist",
                "main": "packages/ghost-writer/ext/src/extension.ts",
                "tsConfig": "packages/ghost-writer/ext/tsconfig.lib.json",
                "format": ["cjs"],
                "bundle": true,
                "external": ["vscode"],
                "outExtension": { ".js": ".cjs" },
                "minify": true,
                "sourcemap": false,
                "treeShaking": true,
                "metafile": true,
                "declarationRootDir": "packages/ghost-writer/ext/src"
            }
        },
        "package:dev": {
            "executor": "nx:run-commands",
            "dependsOn": ["build"],
            "options": {
                "command": "node ./_scripts/create-dev-vsix.js ghost-writer/ext"
            }
        },
        "package": {
            "executor": "nx:run-commands",
            "dependsOn": ["build"],
            "outputs": ["{workspaceRoot}/vsix_packages/ghost-writer.vsix"],
            "options": {
                "command": "vsce package --no-dependencies -o ../../vsix_packages/ghost-writer.vsix",
                "cwd": "{projectRoot}"
            }
        },
        "publish": {
            "executor": "nx:run-commands",
            "dependsOn": ["package"],
            "options": {
                "command": "vsce publish",
                "cwd": "{projectRoot}"
            }
        },
        "lint": {}
    },

    "tags": []
}
