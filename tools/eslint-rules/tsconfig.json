{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": false,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "../../dist/out-tsc",
        "types": ["node", "vitest/globals"]
    },
    "include": [
        "**/*.ts",
        "**/*.js",
        "**/*.json"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}

