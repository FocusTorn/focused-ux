{
    "name": "@focused-ux/eslint-rules",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/esbuild:esbuild",
            "options": {
                "main": "tools/eslint-rules/index.ts",
                "outputPath": "tools/eslint-rules/dist",
                "bundle": false,
                "format": ["esm"],
                "external": ["eslint", "@typescript-eslint/parser"]
            }
        },
        "test": {
            "executor": "@nx/vite:test",
            "dependsOn": ["^build"],
            "options": {
                "passWithNoTests": true
            }
        },
        "test:watch": {
            "executor": "@nx/vite:test",
            "dependsOn": ["^build"],
            "options": {
                "watch": true,
                "passWithNoTests": true
            }
        },
        "test:coverage": {
            "executor": "@nx/vite:test",
            "dependsOn": ["^build"],
            "options": {
                "coverage": {
                    "reporter": ["text", "html", "lcov"]
                },
                "passWithNoTests": true
            }
        }
    }
}

