{
    
    
    "compilerOptions": {
        
        // PACKAGE CHANGED ==============================================
        
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "composite": true,
        
        // "baseUrl": ".", // not used unless with browser AMD loaders
        
        // LANGUAGE & ENVIRONMENT =======================================
        "lib": ["ES2022", "DOM"],
        "types": ["node"],
        "target": "ES2022",
        "skipLibCheck": true,
        "useDefineForClassFields": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        // MODULES ======================================================
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "isolatedModules": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        
        // TYPECHECKING =================================================
        "strict": true,
        "allowUnreachableCode": false,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
        
        // EMIT =========================================================
        "noEmitOnError": true,
        "downlevelIteration": true, //iteration primitives used more accurately in ES5
        "importHelpers": true // downlevel helper tslib imported not generated
        // "outFile": "", // Only if module is None, System, or AMD
        // "sourceRoot": "", //debugger finds .ts when not relative source locations
        
    }
}
