{
    "compilerOptions": {
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@ms-core": ["libs/mock-strategy/src/core/index.ts"],
            "@ms-ext": ["libs/mock-strategy/src/ext/index.ts"],
            "@ms-gen": ["libs/mock-strategy/src/gen/index.ts"],
            "@ms-lib": ["libs/mock-strategy/src/lib/index.ts"],
            "@ms-main": ["libs/mock-strategy/src/index.ts"],
            "@ms-plugin": ["libs/mock-strategy/src/plugin/index.ts"],
            "@ms-tool": ["libs/mock-strategy/src/tool/index.ts"]
        },
        "lib": ["ES2022", "DOM"],
        "types": ["node", "vitest", "@types/vscode", "vitest/globals", "mocha"],
        "target": "ES2022",
        "skipLibCheck": true,
        "useDefineForClassFields": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "isolatedModules": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "allowUnreachableCode": false,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "noEmitOnError": true,
        "downlevelIteration": true,
        "importHelpers": true
    }
}
