{
    "$schema": "https://unpkg.com/knip@latest/schema.json",
    
    "workspaces": {
        
        ".": { //>
            "project": [
                "scripts/**/*.{ts,js,mjs,cjs}"
            ],
            "entry": [
                "scripts/*.{ts,js,mjs,cjs}"
            ],
            "ignore": [
                "eslint.config.js",
                "eslint.config.js.bak",
                "prettier.config.cjs",
                "vitest.*.ts",
                "tsconfig*.json",
                "knip.json",
                "nx.json",
                "package.json",
                "pnpm-lock.yaml",
                "docs/**",
                ".vpack/**",
                "vsix_packages/**"
            ]
        }, //<
        
        
        // ┌──────────────────────────────────────────────────────────────────────────────────────────────┐
        // │                                             LIBS                                             │
        // └──────────────────────────────────────────────────────────────────────────────────────────────┘                
        "libs/project-alias-expander": { //>
            "project": ["src/**/*.ts"],
            "ignoreDependencies": ["adm-zip"]
        }, //<

        
        "libs/vsix-packager": { //>
            "project": ["src/**/*.ts"],
            "ignoreDependencies": ["adm-zip"]
        }, //<

        
        // ┌──────────────────────────────────────────────────────────────────────────────────────────────┐
        // │                                           PACKAGES                                           │
        // └──────────────────────────────────────────────────────────────────────────────────────────────┘                
        "packages/dynamicons/core": { //>
            "project": [ "src/**/*.ts" ],    
            "entry": [ "src/index.ts" ],
            "ignore": [
                "assets/**",
                "dist/**",
                "out-tsc/**"
            ]
        }, //<
        "packages/dynamicons/assets": { //>
            "project": [ "src/**/*.ts" ],
            "entry": [ "src/index.ts", "src/cli.ts" ],
            "ignore": [ 
                "assets/**",
                "dist/**",
                "out-tsc/**"
            ]

        }, //<
        "packages/dynamicons/ext": { //>
            "project": [ "src/**/*.ts" ],
            "entry": [ "src/index.ts"],
            "ignore": [
                "assets/**",
                "dist/**",
                "out-tsc/**"
            ]
        }, //<
        
        "packages/project-butler/core": { //>
            "project": [ "src/**/*.ts" ],
            "entry": [ "src/index.ts" ],
            "ignore": [
                "assets/**",
                "dist/**",
                "out-tsc/**"
            ]
        }, //<
        "packages/project-butler/ext": { //>
            "project": [ "src/**/*.ts" ],
            "entry": [ "src/extension.ts" ],
            "ignore": [
                "assets/**",
                "dist/**",
                "out-tsc/**"
            ]
        }, //<
        
        "packages/note-hub/core": { //>
            "project": [ "src/**/*.ts" ],
            "entry": [ "src/index.ts" ],
            "ignore": [
                "assets/**",
                "dist/**",
                "out-tsc/**"
            ]
        }, //<
        "packages/note-hub/ext": { //>
            "project": [ "src/**/*.ts" ],
            "entry": [ "src/index.ts" ],
            "ignore": [
                "assets/**",
                "dist/**",
                "out-tsc/**"
            ]
        }, //<
    
        "packages/ghost-writer/core": { //>
            "project": [ "src/**/*.ts" ],
            "entry": [ "src/index.ts" ],
            "ignore": [
                "assets/**",
                "dist/**",
                "out-tsc/**"
            ]
        }, //<
        "packages/ghost-writer/ext": { //>
            "project": [ "src/**/*.ts" ],
            "entry": [ "src/index.ts" ],
            "ignore": [
                "assets/**",
                "dist/**",
                "out-tsc/**"
            ]
        }, //<
        
        
        // ┌────────────────────────────────────────────────────────────────────────────────────────────────┐
        // │                                            PLUGINS                                             │
        // └────────────────────────────────────────────────────────────────────────────────────────────────┘                
        "plugins/recommened": { //>
            "project": [ "src/**/*.ts" ],
            "entry": [ "src/index.ts" ],
            "ignore": [
                "assets/**",
                "dist/**",
                "out-tsc/**"
            ]
        }, //<
        "plugins/vpack": { //>
            "project": [ "src/**/*.ts" ],
            "entry": [ "src/index.ts" ],
            "ignore": [
                "assets/**",
                "dist/**",
                "out-tsc/**"
            ]
        } //<

        
        // ┌──────────────────────────────────────────────────────────────────────────────────────┐
        // │                                   WORK IN PROGRESS                                   │
