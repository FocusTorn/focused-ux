{
    "name": "@fux/vscode-test-executor",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "targets": {
        "build": { //>
            "executor": "@nx/esbuild:esbuild",
            "outputs": [
                "{options.outputPath}"
            ],
            "options": {
                
                "main": "plugins/vscode-test-executor/src/index.ts",
                "tsConfig": "plugins/vscode-test-executor/tsconfig.lib.json",

                "bundle": false,
                
                "assets": [
                    {
                        "input": "./plugins/vscode-test-executor/src",
                        "glob": "**/!(*.ts)",
                        "output": "."
                    },
                    {
                        "input": "./plugins/vscode-test-executor/src",
                        "glob": "**/*.d.ts",
                        "output": "."
                    }
                ]
            }

        } //<
        
