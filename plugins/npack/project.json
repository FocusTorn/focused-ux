{
    "name": "@fux/npack",
    "tags": [ "executor" ],
    "targets": {
        
        //= Prepare ============================================================= 
        "build": { //>
            "executor": "@nx/esbuild:esbuild",
            "options": {
                "assets": [
                    {
                        "input": "{projectRoot}/src/executors/pack",
                        "glob": "schema.*",
                        "output": "executors/pack"
                    },
                    {
                        "input": "{projectRoot}",
                        "glob": "executors.json",
                        "output": "."
                    }
                ]
            }
        }, //<
        
        //= Quality ============================================================= 
        "check-types": { "extends": "check-types" },
        
        "lint": { "extends": "lint" },
        
        "audit": { "extends": "audit" },
        "audit:code": { "extends": "audit:code" },
        "audit:test": { "extends": "audit:test" },
        "audit:all": { "extends": "audit:all" },
        
        //= Cleaning ============================================================ 
        "clean": { "extends": "clean" },
        "clean:dist": { "extends": "clean:dist" },
        "clean:cache": { "extends": "clean:cache" },
         
        //= Single Package Testing ============================================== 
        "test": { "extends": "test" },
        "test:coverage-tests": { "extends": "test:coverage-tests" }
    },
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "plugins/npack/src",
    "projectType": "library"
}
