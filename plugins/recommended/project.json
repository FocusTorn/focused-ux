{
    "name": "@fux/recommended",
    "tags": [ "executor" ],
    "targets": {
        
        //= Prepare ============================================================= 
        "build": { //>
            "executor": "@nx/esbuild:esbuild",
            "outputs": [
                "{options.outputPath}"
            ],
            "options": {
                
                "main": "plugins/recommended/src/index.ts",
                "tsConfig": "plugins/recommended/tsconfig.json",

                "bundle": false,
                
                "assets": [ //>
                    {
                        "input": "./plugins/recommended/src",
                        "glob": "**/!(*.ts)",
                        "output": "."
                    },
                    {
                        "input": "./plugins/recommended/src",
                        "glob": "**/*.d.ts",
                        "output": "."
                    }
                ] //<
            }

        }, //<
        
        //= Quality ============================================================= 
        "check-types": { "extends": "check-types" },
        
        "lint": { "extends": "lint" },
        
        "audit": { "extends": "audit" },
        "audit:code": { "extends": "audit:code" },
        "audit:test": { "extends": "audit:test" },
        "audit:all": { "extends": "audit:all" },
        
        //= Cleaning ============================================================ 
        "clean": { "extends": "clean" },
        "clean:dist": { "extends": "clean:dist" },
        "clean:cache": { "extends": "clean:cache" },
         
        //= Single Package Testing ============================================== 
        "test": { "extends": "test" },
        "test:coverage-tests": { "extends": "test:coverage-tests" }
    },
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "plugins/recommended/src",
    "projectType": "library"
}