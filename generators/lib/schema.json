{
  "$schema": "http://json-schema.org/schema",
  "$id": "LibPackageGenerator",
  "title": "Create a library package",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Library name",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the library?"
    },
    "description": {
      "type": "string",
      "description": "Library description",
      "x-prompt": "What description would you like to use for the library?"
    },
    "directory": {
      "type": "string",
      "description": "Directory where the library is placed",
      "default": "libs"
    }
  },
  "required": ["name"]
} 