{
    "generators": {
        "core": {
            "factory": "./core/generator#default",
            "schema": "./core/schema.json",
            "description": "Create a core package"
        },
        "ext": {
            "factory": "./ext/generator#default",
            "schema": "./ext/schema.json",
            "description": "Create an extension package"
        },
        "shared": {
            "factory": "./shared/generator#default",
            "schema": "./shared/schema.json",
            "description": "Create a shared package"
        },
        "lib": {
            "factory": "./lib/generator#default",
            "schema": "./lib/schema.json",
            "description": "Create a library package"
        },
        "test-scaffold": {
            "factory": "./test-scaffold/generator#default",
            "schema": "./test-scaffold/schema.json",
            "description": "Scaffold test directory structure with consistent setup files"
        },
        "tool": {
            "factory": "./tool/generator#default",
            "schema": "./tool/schema.json",
            "description": "Create a tool package following Architecture.md patterns"
        }
    }
}
