{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "tsBuildInfoFile": "./out-tsc/lib/tsconfig.lib.tsbuildinfo",
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "./out-tsc/lib",
        "composite": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "dist",
        "coverage",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}
