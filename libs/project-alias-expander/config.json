{
    "targets": {
        //= Prepare ============================================================= 
        "b"  : "build",
        "p"  : "package",
        "pd" : "package:dev",
        "pub": "publish",
        //= Linting ============================================================= 
        "l" : "lint",
        "lf": "lint:full",
        //= Testing ============================================================= 
        "t"  : "test",
        "tc" : "test:coverage-tests",
