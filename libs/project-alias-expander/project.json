{
    "name": "@fux/project-alias-expander",
    "tags": ["tool"],
    "targets": {
     
        //= Finalize ============================================================ 
        
        "build:bundle": { //>
            "executor": "@nx/esbuild:esbuild",
            "outputs": ["{options.outputPath}"],
            "inputs": [
                "production",
                "^production",
                "{projectRoot}/src/**/*"
            ],
            "options": {
                "main": "libs/project-alias-expander/src/cli.ts",
                "outputPath": "libs/project-alias-expander/dist",
                "outputFileName": "cli.js",
                "tsConfig": "libs/project-alias-expander/tsconfig.json",
                "declarationRootDir": "libs/project-alias-expander/src",
                "format": ["esm"],
                "bundle": true,
                "platform": "node",
                "target": "es2022",
                "external": ["vscode"],
                "thirdParty": false,
                "sourcemap": false,
                "deleteOutputPath": true,
                "declaration": false,
                "minify": true,
                "treeShaking": true,
                "metafile": true
            }
        }, //<
        
        "build:package": { //>
            "executor": "@fux/npack:pack",
            "dependsOn": ["build:bundle"],
            "outputs": [
                "{projectRoot}/*.tgz"
            ],
            "inputs": [
                "production",
                "^production",
                "{projectRoot}/package.json",
                "{projectRoot}/README.md",
                "{projectRoot}/dist/**/*"
            ],
            "options": {
                "keepTemp": false,
                "freshTemp": true,
                "installGlobal": true
            }
        }, //<

        "build": { //>
            "executor": "nx:run-commands",
            "dependsOn": ["build:bundle", "build:package"],
            "outputs": [
                "{projectRoot}/dist"
            ],
            "inputs": [
                "production",
                "^production"
            ],
            "options": {
                "commands": [],
                "parallel": false
            }
        }, //<

        
        //= Quality ============================================================= 
        "check-types": { "extends": "check-types" },
        "check-types:deps": { "extends": "check-types:deps" },
         
        "lint": { "extends": "lint" },
        "lint:deps": { "extends": "lint:deps" },
         
        "audit": { "extends": "audit" },
        "audit:code": { "extends": "audit:code" },
        "audit:test": { "extends": "audit:test" },
        "audit:all": { "extends": "audit:all" },
         
        //= Cleaning ============================================================ 
        "clean": { "extends": "clean" },
        "clean:dist": { "extends": "clean:dist" },
        "clean:cache": { "extends": "clean:cache" },
         
        //= Single Package Testing ============================================== 
        "test": {
            "executor": "@nx/vite:test",
            "outputs": ["{options.reportsDirectory}"],
            "dependsOn": ["build:bundle"],
            "options": {
                "configFile": "{projectRoot}/vitest.config.ts",
                "reportsDirectory": "__tests__/_reports/functional",
                "passWithNoTests": true
            }
        },
        "test:coverage-tests": {
            "executor": "@nx/vite:test",
            "outputs": ["{options.reportsDirectory}"],
            "dependsOn": ["build:bundle"],
            "options": {
                "configFile": "{projectRoot}/vitest.coverage.config.ts",
                "reportsDirectory": "__tests__/_reports/coverage",
                "passWithNoTests": true
            }
        },
        
        
        "test:file": {
            "executor": "@nx/vite:test",
            "outputs": ["{options.reportsDirectory}"],
            "options": {
                "configFile": "{projectRoot}/vitest.config.ts",
                "reportsDirectory": "__tests__/_reports/functional",
                "passWithNoTests": true,
                "testPathPattern": "{args.testFile}"
            }
        },
        "test:integration": {
            "executor": "@nx/vite:test",
            "outputs": ["{options.reportsDirectory}"],
            "options": {
                "configFile": "{projectRoot}/vitest.config.ts",
                "reportsDirectory": "__tests__/_reports/integration",
                "passWithNoTests": true,
                "testPathPattern": "integration-tests"
            }
        },
        "test:performance": {
            "executor": "@nx/vite:test",
            "outputs": ["{options.reportsDirectory}"],
            "options": {
                "configFile": "{projectRoot}/vitest.config.ts",
                "reportsDirectory": "__tests__/_reports/performance",
                "passWithNoTests": true,
                "testPathPattern": "performance-tests"
            }
        },
        "test:all": {
            "executor": "@nx/vite:test",
            "outputs": ["{options.reportsDirectory}"],
            "options": {
                "configFile": "{projectRoot}/vitest.config.ts",
                "reportsDirectory": "__tests__/_reports/all",
                "passWithNoTests": true
            }
        }
         
    },
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/project-alias-expander/src",
    "projectType": "library"
}


