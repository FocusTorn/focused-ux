{
    "name": "@fux/project-alias-expander",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/project-alias-expander/src",
    "projectType": "library",
    "targets": {
     
        //= Finalize ============================================================ 
        "build:compile": { //>
            "executor": "@nx/esbuild:esbuild",
            "outputs": ["{options.outputPath}"],
            "inputs": [
                "production",
                "^production",
                "{projectRoot}/config.json"
            ],
            "options": {
                "outputPath": "libs/project-alias-expander/dist",
                "main": "libs/project-alias-expander/src/cli.ts",
                "tsConfig": "libs/project-alias-expander/tsconfig.json",
                "platform": "node",
                "bundle": true,
                "format": ["esm"],
                "external": ["vscode"],
                "thirdParty": true,
                "assets": []
            }
        }, //<
        "build": { //>
            "executor": "nx:run-commands",
            "dependsOn": ["build:compile"],
            "outputs": [
                "{projectRoot}/dist",
                "{projectRoot}/dist/pae-functions.psm1"
            ],
            "inputs": [
                "production",
                "^production",
                "{projectRoot}/config.json"
            ],
            "options": {
                "commands": ["node libs/project-alias-expander/dist/cli.js install-aliases"],
                "parallel": false
            }
        }, //<
        
        //= Quality ============================================================= 
        "check-types": { "extends": "check-types" },
        "check-types:deps": { "extends": "check-types:deps" },
         
        "lint": { "extends": "lint" },
        "lint:deps": { "extends": "lint:deps" },
         
        "audit": { "extends": "audit" },
        "audit:code": { "extends": "audit:code" },
        "audit:test": { "extends": "audit:test" },
        "audit:all": { "extends": "audit:all" },
         
        //= Cleaning ============================================================ 
        "clean": { "extends": "clean" },
        "clean:dist": { "extends": "clean:dist" },
        "clean:cache": { "extends": "clean:cache" },
         
        //= Single Package Testing ============================================== 
        "test": {
            "executor": "@nx/vite:test",
            "outputs": ["{options.reportsDirectory}"],
            "dependsOn": ["build"],
            "options": {
                "configFile": "{projectRoot}/vitest.config.ts",
                "reportsDirectory": "__tests__/_reports/functional",
                "passWithNoTests": true
            }
        },
        "test:coverage-tests": {
            "executor": "@nx/vite:test",
            "outputs": ["{options.reportsDirectory}"],
            "dependsOn": ["build"],
            "options": {
                "configFile": "{projectRoot}/vitest.coverage.config.ts",
                "reportsDirectory": "__tests__/_reports/coverage",
                "passWithNoTests": true
            }
        }
         
    },
    
    "tags": ["tool"]
}


