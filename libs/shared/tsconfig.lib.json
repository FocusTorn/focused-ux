{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        // "baseUrl": ".", // not used unless with browser AMD loaders
        "outDir": "dist",
        "rootDir": "src",

        "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
        "declaration": true,
        "declarationMap": false,
        "sourceMap": false,
        "composite": true,
        
        "paths": {
            "@fux/shared": ["./src"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["jest.config.ts", "**/*.spec.ts", "**/*.test.ts", "src/__tests__/**"],
    "references": [
        {
            "path": "../mockly/tsconfig.lib.json"
        }
    ]
}
