{
    "name": "@fux/a-trial-lib",
    "tags": [ "library" ],
    "targets": {
        
        //= Finalize ============================================================ 
        "build:dev": { //>
            "executor": "@nx/esbuild:esbuild",
            "outputs": [ "{options.outputPath}" ],
            "inputs": [
                "production",
                "^production",
                "{projectRoot}/src/**/*"
            ],
            "options": {
                "main": "{projectRoot}/src/index.ts",
                "outputPath": "{projectRoot}/dist",
                "tsConfig": "{projectRoot}/tsconfig.json",
                "declarationRootDir": "{projectRoot}/src",
                
                "external": [ "vscode" ],
                "format": [ "esm" ],
                
                "bundle": false,

                "sourcemap": true,
                "declaration": true,
                "minify": false,
                "treeShaking": false,
                "metafile": false
            }
        }, //<
        "build": { //>
            "executor": "@nx/esbuild:esbuild",
            "outputs": [ "{options.outputPath}" ],
            "inputs": [
                "production",
                "^production",
                "{projectRoot}/src/**/*"
            ],
            "options": {
                "main": "{projectRoot}/src/index.ts",
                "outputPath": "{projectRoot}/dist",
                "tsConfig": "{projectRoot}/tsconfig.json",
                "declarationRootDir": "{projectRoot}/src",
                "external": [ "vscode" ],
                "format": [ "esm" ],
                "bundle": true,

                "sourcemap": false,
                "declaration": false,
                "minify": true,
                "treeShaking": true,
                "metafile": true
            }
        }, //<
        
        "build:pre-install": { //>
            "executor": "@fux/npack:pack",
            "dependsOn": [
                "build:bundle"
            ],
            "outputs": [
                "{projectRoot}/*.tgz"
            ],
            "inputs": [
                "production",
                "^production",
                "{projectRoot}/package.json",
                "{projectRoot}/README.md",
                "{projectRoot}/dist/**/*"
            ],
            "options": {
                "keepTemp": false,
                "freshTemp": true,
                "installGlobal": true
            }
        }, //<
        "install": { //>
            "executor": "nx:run-commands",
            "dependsOn": [
                "build",
                "build:install"
            ],
            "outputs": [
                "{projectRoot}/dist"
            ],
            "inputs": [
                "production",
                "^production"
            ],
            "options": {
                "commands": [],
                "parallel": false
            }
        }, //<
        
        //= Quality ============================================================= 
        "check-types": { "extends": "check-types" },
        "check-types:deps": { "extends": "check-types:deps" },
        
        "lint": { "extends": "lint" },
        "lint:deps": { "extends": "lint:deps" },
        "lint:file": { //>
            "executor": "@nx/eslint:lint",
            "cache": true,
            "dependsOn": [
                "build"
            ],
            "options": {
                "lintFilePatterns": [
                    "{projectRoot}/src/*.ts"
                ]
            }
        }, //<
        
        "audit": { "extends": "audit" },
        "audit:code": { "extends": "audit:code" },
        "audit:test": { "extends": "audit:test" },
        "audit:all": { "extends": "audit:all" },
        
        //= Cleaning ============================================================ 
        "clean": { "extends": "clean" },
        "clean:dist": { "extends": "clean:dist" },
        "clean:cache": { "extends": "clean:cache" },
        
        //= Testing ============================================================= 
        "test": { //>
            "executor": "@nx/vite:test",
            "outputs": [ "{options.reportsDirectory}" ],
            "options": {
                "configFile": "{projectRoot}/vitest.config.ts",
                "reportsDirectory": "__tests__/_reports/functional",
                "passWithNoTests": true
            }
        }, //<
        "test:coverage-tests": { //>
            "executor": "@nx/vite:test",
            "outputs": [ "{options.reportsDirectory}" ],
            "options": {
                "configFile": "{projectRoot}/vitest.coverage.config.ts",
                "reportsDirectory": "__tests__/_reports/coverage",
                "passWithNoTests": true
            }
        } //<
        
    },
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/project-alias-expander/src",
    "projectType": "library"
}
