{
    "targets": {
        "b": "build",
        "p": "package",
        "pd": "package:dev",
        "pub": "publish",

        "l": "lint",
        "lf": "lint:full",

        "tsc": "check-types",

        "v": "validate",

        // Test aliases
        "t": "test", // Run functional tests for target package only
        "tw": "test --watch", // Run functional tests with watch mode
        "tc": "test --coverage", // Run coverage tests for target package only
        
        // Test Full aliases (full dependency chain)
        "tf": "test:full", // Run functional tests for target package AND all dependencies (full chain)
        "tfw": "test:full --watch", // Run full chain tests with watch mode
        "tfc": "test:full --coverage", // Run coverage tests for target package AND all dependencies (full chain with coverage)

        // Clean aliases
        "c": "clean",
        "cc": "clean:cache",
        "cd": "clean:dist",
        
        // Audit aliases
        "a": "audit",
        
        "s": "status",
        "o": "optimize",
        "m": "monitor"
    },

    "expandables": {
        "f": "fix", // Enable auto-fix for linting
        "s": "skip-nx-cache", // Skip Nx cache (useful for troubleshooting)
        "v": "verbose", // Enable verbose output
        "d": "debug", // Enable debug output
        
        "watch": "watch", // Enable watch mode
        
        "stream": "output-style=stream", // Use streaming output style
        "echo": "aka-echo" // Echo the resolved command without executing
    },
    
    "packages": {
        // Context Cherry Picker package aliases
        "ccp": {
            "name": "context-cherry-picker",
            "suffix": "ext",
            "full": true // This package runs full dependency chain by default
        },
        "ccpc": {
            "name": "context-cherry-picker",
            "suffix": "core"
        },
        "ccpe": {
            "name": "context-cherry-picker",
            "suffix": "ext"
        },
        
        // Dynamicons package aliases
        "dc": {
            "name": "dynamicons",
            "suffix": "ext",
            "full": true // This package runs full dependency chain by default
        },
        "dcc": {
            "name": "dynamicons",
            "suffix": "core"
        },
        "dce": {
            "name": "dynamicons",
            "suffix": "ext"
        },

        // Ghost Writer package aliases
        "gw": {
            "name": "ghost-writer",
            "suffix": "ext",
            "full": true // This package runs full dependency chain by default
        },
        "gwc": {
            "name": "ghost-writer",
            "suffix": "core"
        },
        "gwe": {
            "name": "ghost-writer",
            "suffix": "ext"
        },
        
        // Project Butler package aliases
        "pb": {
            "name": "project-butler",
            "suffix": "ext",
            "full": true // This package runs full dependency chain by default
        },
        "pbc": {
            "name": "project-butler",
            "suffix": "core"
        },
        "pbe": {
            "name": "project-butler",
            "suffix": "ext"
        },
        
        // Note Hub package aliases
        "nh": {
            "name": "note-hub",
            "suffix": "ext",
            "full": true // This package runs full dependency chain by default
        },
        "nhc": {
            "name": "note-hub",
            "suffix": "core"
        },
        "nhe": {
            "name": "note-hub",
            "suffix": "ext"
        },
        
        // AI Agent Interactor package aliases
        "ai": {
            "name": "ai-agent-interactor",
            "suffix": "ext",
            "full": true // This package runs full dependency chain by default
        },
        "aic": {
            "name": "ai-agent-interactor",
            "suffix": "core"
        },
        "aie": {
            "name": "ai-agent-interactor",
            "suffix": "ext"
        },
        
        // Library aliases
        "mockly": "@fux/mockly", // Mockly library for VSCode API mocking
        "shared": "@fux/shared", // Shared library with VSCode adapters
        "audit": "@fux/structure-auditor", // Structure auditor tool
        "cmo": "@fux/cursor-memory-optimizer" // Cursor memory optimizer tool
    }
}
