{
    "nxCloudId": "685c28f2a5df05525dfa937b",
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "defaultBase": "master",
    "defaultRunner": "nx/tasks-runners/default",
    "namedInputs": {
        "default": ["{projectRoot}/**/*", "sharedGlobals"],
        "production": ["default"],
        "sharedGlobals": ["{workspaceRoot}/.github/workflows/ci.yml"]
    },
    "tasksRunnerOptions": {
        "default": {
            "runner": "nx/tasks-runners/default",
            "options": {
                "cacheableOperations": ["build", "lint", "test", "e2e", "bundle", "build-types"]
            }
        }
    },
    "targetDefaults": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["{options.outputPath}"]
        },
        "publish": {
            "dependsOn": ["build"]
        },
        "@nx/js:swc": {
            "cache": true,
            "dependsOn": ["^build"],
            "inputs": ["production", "^production"],
            "options": {
                "outputPath": "{projectRoot}/dist",
                "main": "{projectRoot}/src/index.ts",
                "tsConfig": "{projectRoot}/tsconfig.lib.json",
                "swcrc": "{workspaceRoot}/.swcrc",
                "stripLeadingPaths": true,
                "clean": true,
                "minify": false
            }
        },
        "@nx/js:tsc": {
            "cache": true,
            "dependsOn": ["^build"],
            "inputs": ["production", "^production"]
        },
        "@nx/esbuild:esbuild": {
            "cache": true,
            "inputs": ["production", "^production"],
            "options": {
                "outputPath": "{projectRoot}/dist",
                "tsConfig": "{projectRoot}/tsconfig.json",
                "platform": "browser",
                "bundle": true,
                "external": ["vscode"],
                "thirdParty": true,
                "plugins": [
                    "./_scripts/esbuild/node-alias.plugin.cjs",
                    "./_scripts/esbuild/polyfill.plugin.cjs"
                ]
            }
        }
    },
    "release": {
        "projects": ["@fux/ghost-writer-ext"],
        "projectsRelationship": "independent",
        "version": {
            "conventionalCommits": true
        },
        "changelog": {
            "projectChangelogs": true
        }
    },
    "plugins": [
        {
            "plugin": "@nx/js/typescript",
            "options": {
                "typecheck": {
                    "targetName": "typecheck"
                },
                "build": {
                    "targetName": "build",
                    "configName": "tsconfig.lib.json"
                }
            }
        },
        {
            "plugin": "@nx/eslint/plugin",
            "options": {
                "targetName": "lint"
            },
            "include": [
                "packages/_shared/shared-services/**/*",
                "packages/ghost-writer/core/**/*",
                "packages/ghost-writer/ext/**/*",
                "packages/project-butler/core/**/*",
                "packages/project-butler/ext/**/*",
                "packages/project-butler-merged/**/*",
                "packages/project-butler-all/project-butler-base/**/*",
                "packages/project-butler-all/project-butler-dc/core/**/*",
                "packages/project-butler-all/project-butler-dc/ext/**/*",
                "packages/note-hub/core/**/*",
                "packages/note-hub/ext/**/*",
                "packages/context-cherry-picker/core/**/*",
                "packages/context-cherry-picker/ext/**/*",
                "packages/solo-format-package-json/**/*"
            ]
        }
    ]
}
